<?xml version="1.0"?>

<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">

    <!-- The id of the extension. -->
    <em:id>yt-animated-thumbnails@mozilla.com</em:id>

    <!-- A version string identifying the version of the add-on. -->
    <em:version>1.2</em:version>

    <!-- The name of the add-on; intended for display in the UI. -->
    <em:name>YouTube Animated Thumbnails</em:name>

    <!-- A short description to display in the user interface. -->
    <em:description>Firefox extension that animates the video thumbnails on YouTube</em:description>

    <!-- The name of the developer to display in the user interface. -->
    <em:creator>Victor Porof</em:creator>

    <!-- A link to the add-on home page to display in the user interface. -->
    <em:homepageURL>https://twitter.com/victorporof</em:homepageURL>

    <!-- An icon to display in the add-ons list. -->
    <em:iconURL>chrome://yt-animated-thumbnails/skin/icon.png</em:iconURL>

    <!-- Target Application this extension can install into,
         with minimum and maximum supported versions. -->
    <em:targetApplication>
      <Description>
        <!-- Mozilla Firefox -->
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
        <em:minVersion>29.0a1</em:minVersion>
        <em:maxVersion>32.0a1</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- An integer value representing the type of add-on. -->
    <em:type>2</em:type> <!-- Extensions -->

    <!-- Tells the application whether the extension is boot-strappable. -->
    <em:bootstrap>true</em:bootstrap>

  </Description>
</RDF>
